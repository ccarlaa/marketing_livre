{
  "env": {
      "browser": true,
      "es2021": true
  },
  "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
  ],
  "overrides": [
      {
          "env": {
              "node": true
          },
          "files": [
            "src/**/*.js",
            "src/**/*.jsx"
          ],
          "parserOptions": {
              "sourceType": "module"
          }
      }
  ],
  "plugins": [
      "react"
  ],
  "settings": {
      "react": {
          "version": "detect"
      }
  },
  "rules": {
      "semi": ["error", "always"],
      "quotes": ["error", "double"],
      "react/prop-types": "off"
  }
}
